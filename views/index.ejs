<!DOCTYPE html>
<html>
<head>
<meta charset=utf-8>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
    <!--Load the AJAX API-->
    <script type="text/javascript" src="https://www.google.com/jsapi"></script>
    <script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
    <script type="text/javascript">
    <script src="/javascripts/groupApp.js"></script>

    </head>
    <body ng-app="nytAPI">
            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                <ui-view></ui-view>
                </div>
            </div>

        <div class = "page header">
            <h1>New York Times Article Search</h1>
            <p>Search for articles on a given date</p>
        </div>
       
        <form ng-submit="addDate()" 
         style = "margin-top:30px;">

            <h3>Input a date</h3>
           
            <div class="form-group">
                <input type="text"
                class="form-control"
                placeholder="Year (ex. 2000)"
                ng-model="year"></input>
            </div>
            <div class="form-group">
                <input type="text"
                class="form-control"
                placeholder="Month (ex. 01)"
                ng-model="month"></input>
            </div>
            <div class="form-group">
                <input type="text"
                class="form-control"
                placeholder="Day (ex. 22)"
                ng-model="day"></input>
            </div>
            
            <button type="submit" class="btn btn-primary">Retrieve articles</button>
           

       </form>
        
        <div>
            <ng-show="dates.year">
            {{dates.year}}
            {{dates.date}}
            </ng-show>
        </div>
        
    <ng-chart="simple_table">

            <div id="chart_div"></div>
        </div>
    </ng-app>
    </body>

</html>